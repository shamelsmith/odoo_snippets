{
    /*
    // Place your snippets for XML here. Each snippet is defined under a snippet name and has a prefix, body and 
    // description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
    // $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
    // same ids are connected.
    // Example:
    "Print to console": {
        "prefix": "log",
        "body": [
            "console.log('$1');",
            "$2"
        ],
        "description": "Log output to console"
    }
*/
    "Options Attribute": {
        "prefix": "opt",
        "body": [
            "options=\"{'create': false, 'create_edit': false, 'search_more':true ,'no_open':True}\""
        ],
        "description": "Options for the One2Many fields from MX Options Module"
    },
    "widget/float_time": {
        "prefix": "widget/float_time",
        "body": "widget='float_time'"
    },
    "view/full": {
        "body": [
            "",
            "<!-- VIEWS: \"${1:Human readable name}\"",
            "",
            "    - Model\u00b7\u00b7\u00b7\u00b7\u00b7\u00b7\u00b7\u00b7\u00b7: ${2:model}",
            "    - _rec_name\u00b7\u00b7\u00b7\u00b7\u00b7: ${3:name}",
            "    - Domain\u00b7\u00b7\u00b7\u00b7\u00b7\u00b7\u00b7\u00b7: ${4:[]}",
            "    - Context\u00b7\u00b7\u00b7\u00b7\u00b7\u00b7\u00b7: ${5:context}",
            "    - Parent menu \u00b7\u00b7: ${6:base.menu_custom}",
            "    - View priority\u00b7: ${7:16}    ",
            "    - Sequence\u00b7\u00b7\u00b7\u00b7..: ${8:10}",
            "    - Action help\u00b7\u00b7\u00b7: ${9:Something about ${2/(.)/$1/g}}",
            "- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->",
            "",
            "<!-- Tree view for \"${2/(.)/${1:/downcase}/g}\" -->",
            "<record id=\"view_${2/\\./_/g}_tree\" model=\"ir.ui.view\">",
            "    <field name=\"name\">view.${2/\\.+/./g}.tree</field>",
            "    <field name=\"model\">${2/\\.+/./g}</field>",
            "    <field name=\"mode\">primary</field>",
            "    <field name=\"priority\" eval=\"${7/(.)/${1:/downcase}/g}\" />",
            "    <field name=\"active\" eval=\"True\" />",
            "    <field name=\"arch\" type=\"xml\">",
            "        <tree string=\"${1/(.)/${1:/downcase}/g}s\" create=\"true\" delete=\"true\" edit=\"true\">",
            "            <field name=\"${3/(.)/${1:/downcase}/g}\" />",
            "",
            "        </tree>",
            "    </field>",
            "</record>",
            "",
            "<!-- Form view for \"${2/(.)/${1:/downcase}/g}\" -->",
            "<record id=\"view_${2/\\./_/g}_form\" model=\"ir.ui.view\">",
            "    <field name=\"name\">view.${2/\\.+/./g}.form</field>",
            "    <field name=\"model\">${2/\\.+/./g}</field>",
            "    <field name=\"mode\">primary</field>",
            "    <field name=\"priority\" eval=\"${7/(.)/${1:/downcase}/g}\" />",
            "    <field name=\"active\" eval=\"True\" />",
            "    <field name=\"arch\" type=\"xml\">",
            "        <form string=\"${1/(.)/${1:/downcase}/g}\" create=\"true\" delete=\"true\" edit=\"true\">",
            "            <header>",
            "            </header>",
            "            <sheet>",
            "                <div class=\"oe_title\">",
            "                    <label for=\"${3/(.)/${1:/downcase}/g}\" class=\"oe_edit_only\" />",
            "                    <h1>",
            "                        <field name=\"${3/(.)/${1:/downcase}/g}\" class=\"oe_inline\"",
            "                            placeholder=\"${3/(.*?)_([a-zA-Z])/${1:/capitalize} ${2:/downcase}/g}\" />",
            "                    </h1>",
            "                </div>",
            "                <group>",
            "",
            "                </group>",
            "            </sheet>",
            "        </form>",
            "    </field>",
            "</record>",
            "",
            "<!-- Search view for \"${2/(.)/${1:/downcase}/g}\" -->",
            "<record id=\"view_${2/\\./_/g}_search\" model=\"ir.ui.view\">",
            "    <field name=\"name\">view.${2/\\.+/./g}.search</field>",
            "    <field name=\"model\">${2/\\.+/./g}</field>",
            "    <field name=\"mode\">primary</field>",
            "    <field name=\"priority\" eval=\"${7/(.)/${1:/downcase}/g}\" />",
            "    <field name=\"active\" eval=\"True\" />",
            "    <field name=\"arch\" type=\"xml\">",
            "        <search string=\"${1/(.)/${1:/downcase}/g}\">",
            "            <field name=\"${3/(.)/${1:/downcase}/g}\" />",
            "            ",
            "        </search>",
            "    </field>",
            "</record>",
            "",
            "<!-- Main window action for \"${2/(.)/${1:/downcase}/g}\" -->",
            "<record id=\"action_${2/(.*?)_([a-zA-Z])/${1:/downcase}_${2:/downcase}/g}_act_window\" model=\"ir.actions.act_window\">",
            "    <field name=\"type\">ir.actions.act_window</field>",
            "    <field name=\"name\">${1/(.)/${1:/downcase}/g}</field>",
            "    <field name=\"res_model\">${2/\\.+/./g}</field>",
            "    <field name=\"view_mode\">tree,form</field>",
            "    <field name=\"view_type\">form</field>",
            "    <field name=\"target\">current</field>",
            "    <field name=\"domain\">${4/(.)/${1:/downcase}/g}</field>",
            "    <field name=\"context\">${5/(.)/${1:/downcase}/g}</field>",
            "    <field name=\"search_view_id\" ref=\"view_${2/\\./_/g}_search\" />",
            "    <field name=\"help\" type=\"html\">",
            "        <p class=\"oe_view_nocontent_create\">",
            "            Click to add new ${1/(.)/${1:/downcase}/g}",
            "        </p><p>",
            "            ${9:Something about ${2/(.)/$1/g}}",
            "        </p>",
            "    </field>",
            "</record>",
            "",
            "<!-- Main menu for \"${2/(.)/${1:/downcase}/g}\" -->",
            "<record id=\"menu_${2/(.*?)_([a-zA-Z])/${1:/downcase}_${2:/downcase}/g}\" model=\"ir.ui.menu\" >",
            "    <field name=\"name\">${1/(.)/${1:/downcase}/g}</field>",
            "    <field name=\"sequence\" eval=\"${8/(.)/${1:/downcase}/g}\" />",
            "    <field name=\"action\" ref=\"action_${2/(.*?)_([a-zA-Z])/${1:/downcase}_${2:/downcase}/g}_act_window\" />",
            "    <field name=\"parent_id\" ref=\"${6/(.)/${1:/downcase}/g}\" />",
            "</record>",
            ""
        ],
        "description": "Views: tree, form, search; act_window and menu",
        "prefix": "ooview/full"
    },
    "view/inherit": {
        "body": [
            "",
            "<!--",
            "",
            "${1:Human readable name}",
            "${1/./=/g}",
            "",
            "Inherited Views",
            "",
            "- - - - - - - - -",
            "- Model\u00b7\u00b7\u00b7\u00b7\u00b7\u00b7\u00b7\u00b7\u00b7: ${2:model}",
            "- Base Module\u00b7\u00b7\u00b7: ${3:module_name}",
            "- Mode\u00b7\u00b7\u00b7\u00b7\u00b7\u00b7\u00b7\u00b7\u00b7\u00b7: ${4|primary,extension|}",
            "- View priority\u00b7: ${5:16}",
            "- - - - - - - - -",
            "",
            "-->",
            "",
            "<!-- ${4/(^.)/${1:/capitalize}/g} Inherited .:Tree:. view for \"${2/(.)/${1:/downcase}/g}\" -->",
            "<record id=\"view_${2/\\./_/g}_tree_inherited\" model=\"ir.ui.view\">",
            "    <field name=\"name\">view.${2/\\.+/\\./g}.tree inherited</field>",
            "    <field name=\"model\">${2/\\.+/\\./g}</field>",
            "    <!-- Please veryfiy, that the following inherited view really sticks to the naming convention. -->",
            "    <field name=\"inherit_id\" ref=\"${3:module_name}.view_${2/\\./_/g}_tree\" />",
            "    <field name=\"mode\">${4:primary}</field>",
            "    <field name=\"priority\" eval=\"${5/(.)/${1:/downcase}/g}\" />",
            "    <field name=\"active\" eval=\"True\" />",
            "    <field name=\"arch\" type=\"xml\">",
            "        <xpath expr=\"//field[@name='${0:name}']\" position=\"after\">",
            "            ",
            "        </xpath>",
            "    </field>",
            "</record>",
            "",
            "<!-- ${4/(^.)/${1:/capitalize}/g} Inherited .:Form:. view for \"${2/(.)/${1:/downcase}/g}\" -->",
            "<record id=\"view_${2/\\./_/g}_form_inherited\" model=\"ir.ui.view\">",
            "    <field name=\"name\">view.${2/\\.+/\\./g}.form inherited</field>",
            "    <field name=\"model\">${2/\\.+/\\./g}</field>",
            "    <!-- Please veryfiy, that the following inherited view really sticks to the naming convention. -->",
            "    <field name=\"inherit_id\" ref=\"${3:module_name}.view_${2/\\./_/g}_form\" />",
            "    <field name=\"mode\">${4:primary}</field>",
            "    <field name=\"priority\" eval=\"${5/(.)/${1:/downcase}/g}\" />",
            "    <field name=\"active\" eval=\"True\" />",
            "    <field name=\"arch\" type=\"xml\">",
            "        <!-- ",
            "        <xpath expr=\"//field[@name='${0:name}']\" position=\"after\">",
            "            ",
            "        </xpath>",
            "         -->",
            "    </field>",
            "</record>",
            "",
            "<!-- ${4/(^.)/${1:/capitalize}/g} Inherited .:Search:. view for \"${2/(.)/${1:/downcase}/g}\" -->",
            "<record id=\"view_${2/\\./_/g}_search_inherited\" model=\"ir.ui.view\">",
            "    <field name=\"name\">view.${2/\\.+/\\./g}.search inherited</field>",
            "    <field name=\"model\">${2/\\.+/\\./g}</field>",
            "    <!-- Please veryfiy, that the following inherited view really sticks to the naming convention. -->",
            "    <field name=\"inherit_id\" ref=\"${3:module_name}.view_${2/\\./_/g}_search\" />",
            "    <field name=\"mode\">${4:primary}</field>",
            "    <field name=\"priority\" eval=\"${5/(.)/${1:/downcase}/g}\" />",
            "    <field name=\"active\" eval=\"True\" />",
            "    <field name=\"arch\" type=\"xml\">",
            "        <!-- ",
            "        <xpath expr=\"//field[@name='${0:name}']\" position=\"after\">",
            "            ",
            "        </xpath>",
            "        -->",
            "    </field>",
            "</record>",
            ""
        ],
        "description": "Inherited Views: tree, form, search",
        "prefix": "ooview/inherit"
    },

}